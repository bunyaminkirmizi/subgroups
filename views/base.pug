    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')

  body
    include nav.pug
    .container.mt-2
      if message
        .alert.alert-dismissible.mt-2.me-2.ms-2(class="alert-"+message.type)
          button.btn-close(type='button' data-bs-dismiss='alert')
          strong=message.header
          p=message.body
        div.container.mt-2
      block content
    

