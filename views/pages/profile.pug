extends ../base.pug

block content
    .container.d-flex.justify-content-center.align-items-center
        .row
            .card.mt-5
                .user.text-center.mt-2
                    .profile
                        img.rounded-circle(src='/assets/images/profile_stock.png' width='150')
                .mt-3.text-center
                    h4.mb-0=user.username
                    span.text-muted.d-block.mb-2=user.register_timestamp
                    button.btn.btn-primary Takip et
                    | 
                    div    
                      button.btn.btn-primary(type='button' style="height = 38px;" data-bs-toggle='modal' data-bs-target='#exampleModal' data-bs-whatever=user.username)
                        i.fa-solid.fa-paper-plane
                      #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                        .modal-dialog
                          .modal-content
                            .modal-header
                              h5#exampleModalLabel.modal-title Yeni mesaj
                              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            .modal-body
                              form
                                .mb-3
                                  label.col-form-label(for='message-text') Mesaj:
                                  textarea#message-text.form-control
                            .modal-footer
                              button.btn.btn-outline-success(type='button') GÃ¶nder
                      .d-flex.justify-content-between.align-items-center.mt-4.px-4
                          .stats
                              h6.mb-0 Followers
                              span 0
                          .stats
                              h6.mb-0 Posts
                              span 0