mixin post_thumb(post)
  //- h1=JSON.stringify(post)
  .card.mb-3.bordered.button-to-the-top.overflowhidden
      .row.g-0
        .col-md-2.text-center.mt-2    
          if post.send_timestamp
            .text-secondary=post.send_timestamp.toLocaleString("tr-TR", {day: "numeric",month: "short",year: "numeric",hour: "numeric",minute: "2-digit"})
          div.mt-2.mb-1.text-center
            img.rounded-circle.p-0.me-2(src='/profile_photos/'+post.profile_photo_path height='50' width='50' alt='profile photo nav' loading='lazy')
            a.stretched-link.pt-1.pb-1(href='/user/'+post.user_id)=post.username
        .col-md-8.textthumbnail
            a.stretched-link(href='/post/detail?post_id='+post.post_id id=post.post_id)
            .card-body.fixedcardsize
              h5.card-title=post.header
              p.card-text.markdown_detailed_render=post.body
        img.p-0.me-0.col-md-2.img-fluid(class="thumbnailpost" src='', alt='profile photo nav', loading='lazy')